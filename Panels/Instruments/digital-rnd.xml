<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Digital HAU-8/A ammunition display</name>
 <w-base>40</w-base>
 <h-base>10</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/A-10/Panels/Instruments/Textures/trans-dgrey-bg.png</path>
   </texture>
    <w>100</w>
    <h>16</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>50</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>8</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GAU-8/A: </text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>4</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>GAU-8/A Ammunition display</name>
   <type>text</type>
   <font>led</font>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/ai/submodels/submodel[1]/count</property>
     <format>%04.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>65</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>3</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>

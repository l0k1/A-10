<?xml version="1.0"?>

<!--

-->

<PropertyList>

 <name>Text Auto Pilot Instrument</name>
 <w-base>240</w-base>
 <h-base>16</h-base>

 <params>
  <ah-select>/autopilot/locks/altitude</ah-select>
  <tf-select>/autopilot/locks/altitude</tf-select>
  <mc-select>/autopilot/locks/altitude</mc-select>
 </params>

 <layers>
<!-- Titles -->
  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/A-10/Panels/Instruments/Textures/trans-green-bg.rgb</path>
   </texture>
    <w>240</w>
    <h>16</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

<!-- All Off -->
  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>0.0</red>
    <green>0.9</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AP Mode: </text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-112</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Altitude hold - Off</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>0.0</red>
    <green>0.9</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>AH</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-25</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Terrain Follow - Off</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>0.0</red>
    <green>0.9</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>TF</text>
    </chunk>
   </chunks>

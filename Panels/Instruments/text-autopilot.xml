 <actions>

<!-- Disengage Autopilot -->
  <action>
   <name>Autopilot Off</name>
   <button>0</button>
   <x>-115</x>
   <y>-10</y>
   <w>90</w>
   <h>18</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/ah-select"/>
    <value type="string"></value>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/auto-take-off</property>
    <value type="string">Enabled</value>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/auto-landing</property>
    <value type="string">Disabled</value>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/AoA-lock</property>
    <value type="string">Disabled</value>
   </binding>
  </action>

<!-- Engage Alititude Hold -->
  <action>
   <name>Altitude Hold Select</name>
   <button>0</button>
   <x>-26</x>
   <y>-10</y>
   <w>28</w>
   <h>18</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/ah-select"/>
    <value type="string">altitude-hold</value>
   </binding>
   <binding>
    <command>property-assign</command>
    <property>/autopilot/locks/auto-landing</property>
    <value type="string">Enabled</value>
   </binding>
  </action>

<!-- Engage Terrain Follow -->
  <action>
   <name>Terrain Follow Select</name>
   <button>0</button>
   <x>2</x>
   <y>-10</y>
   <w>28</w>
   <h>18</h>
   <binding>
    <command>property-assign</command>
    <property alias="../../../../params/tf-select"/>
    <value type="string">terrain-follow</value>
   </binding>
  </action>

<!-- Engage Take-Off Mode -->
  <action>
   <name>Take Off Select</name>
   <button>0</button>
   <x>31</x>
   <y>-10</y>
   <w>28</w>
   <h>18</h>
   <binding>
    <command>nasal</command>
    <script>A10.autotakeoff()</script>
   </binding>
  </action>

<!-- Engage instrument Landing -->
  <action>
   <name>Instrument Landing Select</name>
   <button>0</button>
   <x>60</x>
   <y>-10</y>
   <w>28</w>
   <h>18</h>
   <binding>
     <command>nasal</command>
     <script>A10.autoland()</script>
   </binding>
  </action>

<!-- Engage Mach Climb -->

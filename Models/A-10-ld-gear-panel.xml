<?xml version="1.0"?>

  <PropertyList> 
    <path>A-10-ld-gear-panel.ac</path>

<!-- flaps guauge -->
    <animation>
      <name>flaps</name>
      <type>rotate</type>
      <object-name>needle</object-name>
  <property>surface-positions/left-flap-pos-norm</property>
      <interpolation> 
        <entry><ind>0</ind><dep>0</dep></entry>
        <entry><ind>0.333</ind><dep>30</dep></entry>
        <entry><ind>0.666</ind><dep>60</dep></entry>
        <entry><ind>1</ind><dep>90</dep></entry>
      </interpolation>
      <center>
       <x-m>0.0000</x-m>
       <y-m>-0.0167</y-m>
       <z-m>-0.0314</z-m>
      </center>
      <axis> 
        <x>-1</x>
        <y>0</y>
        <z>0</z>
      </axis>
    </animation>

<!-- gear warning lights -->
  <!-- nose -->
  <animation>
   <type>select</type>
   <object-name>n-gear-warn</object-name>
   <condition>
   <and>
    <greater-than>
     <property>gear/gear[0]/position-norm</property>
     <value>0</value>
    </greater-than>
    <less-than>
     <property>gear/gear[0]/position-norm</property>
     <value>1</value>
    </less-than>
   </and>
   </condition>
  </animation>
  <!-- left -->
  <animation>
   <type>select</type>
   <object-name>l-gear-warn</object-name>
   <condition>
   <and>
    <greater-than>
     <property>gear/gear[1]/position-norm</property>
     <value>0</value>
    </greater-than>
    <less-than>
     <property>gear/gear[1]/position-norm</property>
     <value>1</value>
    </less-than>
   </and>
   </condition>
  </animation>
  <!-- right -->
  <animation>
   <type>select</type>
   <object-name>r-gear-warn</object-name>
   <condition>
   <and>
    <greater-than>
     <property>gear/gear[2]/position-norm</property>
     <value>0</value>
    </greater-than>
    <less-than>
     <property>gear/gear[2]/position-norm</property>
     <value>1</value>
    </less-than>
   </and>
   </condition>
  </animation>

<!-- gear safe lights -->
  <!-- nose -->
  <animation>
   <type>select</type>
   <object-name>n-gear-safe</object-name>
   <condition>
    <equals>
     <property>gear/gear[0]/position-norm</property>
     <value>1</value>
    </equals>
   </condition>
  </animation>
  <!-- left -->
  <animation>
   <type>select</type>
   <object-name>l-gear-safe</object-name>
   <condition>
    <equals>
     <property>gear/gear[1]/position-norm</property>
     <value>1</value>
    </equals>
   </condition>
  </animation>
  <!-- right -->
  <animation>
   <type>select</type>
   <object-name>r-gear-safe</object-name>
   <condition>
    <equals>
     <property>gear/gear[2]/position-norm</property>
     <value>1</value>
    </equals>
   </condition>
  </animation>

<!-- ld-gear-handle -->
  <animation>
    <name>ld-gear-handle</name>
    <type>rotate</type>
    <object-name>ld-gear-handle</object-name>
    <property>controls/gear/A-10-landing-gear-hdl-anim</property>
    <factor>52</factor>
      <center>
       <x-m>-0.0121</x-m>
       <y-m>0.0327</y-m>
       <z-m>-0.0177</z-m>
      </center>
      <axis> 
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </animation>
  




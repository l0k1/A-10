<?xml version="1.0"?>

<PropertyList>
	<!-- horizontal situation indicator -->
	<name>HSI</name>
	<path>A-10-HSI-2.ac</path>


	<!-- HSI-course-card -->
	<animation>
		<type>rotate</type>
		<object-name>HSI-course-card</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>HSI-course-card</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>
  
	<!--bearing-validity-flag-->
	<animation>
		<type>select</type>
		<object-name>bearing-validity-flag</object-name>
		<condition>
			<or>
				<equals>
					<property>instrumentation/tacan/in-range</property>
					<value>false</value>
				</equals>
				<equals>
					<property>instrumentation/tacan/switch-position</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
	</animation>
  	<animation>
		<type>rotate</type>
		<object-name>bearing-validity-flag</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-validity-flag</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<!--course-deviation-indicator off (CDI)-->
	<animation>
		<type>select</type>
		<object-name>course-deviation-indicator-off</object-name>
		<condition>
			<or>
				<less-than>
					<property>systems/electrical/outputs/hsi</property>
					<value>24</value>
				</less-than>
				<and>
					<equals>
						<property>sim/model/A-10/A-10-nav/selector-ils</property>
						<value>false</value>
					</equals>
					<equals>
						<property>instrumentation/tacan/switch-position</property>
						<value>0</value>
					</equals>
				</and>
			</or>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>course-deviation-indicator-off</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis><x>1</x></axis>
	</animation>
  	<animation>
		<type>rotate</type>
		<object-name>course-deviation-indicator-off</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<!--  ILS on CDI  -->
	<!-- ils course-deviation-indicator on-->
	<animation>
		<type>select</type>
		<object-name>course-deviation-indicator-on</object-name>
		<condition>
			<equals>
				<property>sim/model/A-10/A-10-nav/selector-ils</property>
				<value>true</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>course-deviation-indicator-on</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis><x>1</x></axis>
	</animation>
  	<animation>
		<type>rotate</type>
		<object-name>course-deviation-indicator-on</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>course-deviation-indicator-on</object-name>
		<property>instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
			<entry><ind>-10</ind><dep>-0.024</dep></entry>
			<entry><ind>0</ind><dep>0</dep></entry>
			<entry><ind>10</ind><dep>0.024</dep></entry>
		</interpolation>
		<axis><y>1</y></axis>
	</animation>
	<!-- ils to-from (to)-->
	<animation>
		<type>select</type>
		<object-name>to-from-to</object-name>
		<condition>
			<equals>
				<property>instrumentation/nav[1]/to-flag</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>to-from-to</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>to-from-to</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>
	<!-- ils to-from (from)-->
	<animation>
		<type>select</type>
		<object-name>to-from-from</object-name>
		<condition>
			<equals>
				<property>instrumentation/nav[1]/from-flag</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>to-from-from</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>/instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>to-from-from</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<!--  TACAN on CDI  -->
	<!-- tacan course-deviation-indicator on-->

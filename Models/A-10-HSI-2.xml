<?xml version="1.0"?>

<PropertyList>
  <!-- horizontal situation indicator -->
  <name>HSI</name>
  <path>A-10-HSI-2.ac</path>


<!--HSI-course-card-->
  <animation>
    <type>rotate</type>
    <object-name>HSI-course-card</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
    <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>HSI-course-card</object-name>
    <property>instrumentation/nav[1]/radials/selected-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
<!--bearing-validity-flag-->
  <animation>
    <type>select</type>
    <object-name>bearing-validity-flag</object-name>
    <condition>
      <or>
        <equals>
          <property>instrumentation/tacan/in-range</property>
          <value>false</value>
        </equals>
        <equals>
          <property>instrumentation/tacan/switch-position</property>
          <value>0</value>
        </equals>
      </or>
    </condition>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>bearing-validity-flag</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>bearing-validity-flag</object-name>
    <property>instrumentation/nav[1]/radials/selected-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

<!--course-deviation-indicator ils off (CDI)-->
  <animation>
    <type>select</type>
    <object-name>course-deviation-indicator-off</object-name>
    <condition>
      <equals>
        <property>controls/switches/ils</property>
        <value>false</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>course-deviation-indicator-off</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>course-deviation-indicator-off</object-name>
    <property>instrumentation/nav[1]/radials/selected-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

<!--course-deviation-indicator ils on (CDI)-->
  <animation>
    <type>select</type>
    <object-name>course-deviation-indicator-on</object-name>
    <condition>
      <equals>
        <property>controls/switches/ils</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>course-deviation-indicator-on</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>course-deviation-indicator-on</object-name>
    <property>instrumentation/nav[1]/radials/selected-deg</property>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>course-deviation-indicator-on</object-name>
    <property>instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-10</ind>
				<dep>-0.024</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>0.024</dep>
			</entry>
		</interpolation>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>


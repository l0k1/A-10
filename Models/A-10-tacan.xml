<?xml version="1.0"?>



<PropertyList>
<path>A-10-tacan.ac</path>

  <animation>
    <type>textranslate</type>
    <object-name>drum-1</object-name>
    <property>instrumentation/tacan/frequencies/selected-channel[1]</property>
    <factor>0.1</factor>
    <offset>-1</offset>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>drum-2</object-name>
    <property>instrumentation/tacan/frequencies/selected-channel[2]</property>
    <factor>0.1</factor>
    <offset>-1</offset>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>drum-3</object-name>
    <property>instrumentation/tacan/frequencies/selected-channel[3]</property>
    <factor>0.1</factor>
    <offset>-1</offset>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>Y-sign</object-name>
    <condition>
      <equals>
        <property>instrumentation/tacan/frequencies/selected-channel[4]</property>
        <value>Y</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>X-sign</object-name>
    <condition>
      <equals>
        <property>instrumentation/tacan/frequencies/selected-channel[4]</property>
        <value>X</value>
      </equals>
    </condition>
  </animation>




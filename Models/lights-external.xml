			<b>0.9</b>
			<a>1</a>
		</specular>
		<attenuation>
			<c>1</c>
			<l>1.7</l>
			<q>4</q>
		</attenuation>
		<cutoff>4</cutoff>
		<near-m>0.01</near-m>
		<far-m>4</far-m>

			</equals>
			<not>
				<equals>
					<property>sim/model/A-10/controls/lighting/land-lights-switch</property>
					<value>1</value>
				</equals>
			</not>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>Taxi-halo</object-name>
		<offset-m>3,075</offset-m>
		<axis>

	<!-- UC-Nose taxi and landing lights -->

	<!-- taxi light -->
	<animation>
		<type>select</type>
		<object-name>Taxi-halo</object-name>
		<condition>
			<not>
				<property>sim/rendering/rembrandt/enabled</property>

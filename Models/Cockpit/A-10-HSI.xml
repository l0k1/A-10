<?xml version="1.0"?>

<PropertyList>
	<!-- horizontal situation indicator -->
	<name>HSI</name>
	<path>A-10-HSI.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>hsi</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>cdi</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
		<axis>
			<x>1</x>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-1</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>sim/model/A-10/instrumentation/tacan/indicated-bearing-mag-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>miles-flag</object-name>
		<condition>
			<or>
				<equals>
					<property>instrumentation/tacan/in-range</property>
					<value>false</value>
				</equals>
				<equals>
					<property>instrumentation/tacan/switch-position</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</less-than>
		</condition>
	</animation>

	<!-- tacan distance digital display -->
	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-1</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<axis>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-2</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<scroll>0.5</scroll>
		<axis>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>miles-drum-3</object-name>
		<property>instrumentation/tacan/indicated-distance-nm</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<scroll>0.5</scroll>
		<axis>
			<y>-1</y>
		</axis>
	</animation>

	<!-- course digital display -->
	<animation>
		<type>textranslate</type>
		<object-name>course-drum-1</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<factor>0.1</factor>
		<offset>-1</offset>
		<axis>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>course-drum-2</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<factor>0.01</factor>
		<offset>-10</offset>
		<step>10</step>
		<scroll>0.5</scroll>
		<axis>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>course-drum-3</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<factor>0.001</factor>
		<offset>-100</offset>
		<step>100</step>
		<scroll>0.5</scroll>
		<axis>
			<y>-1</y>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>course-knob</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<center>
			<y-m>0.0491</y-m>
			<z-m>-0.0413</z-m>
		</center>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>heading-set-knob</object-name>
		<property>instrumentation/heading-indicator-fg/offset-deg</property>
		<center>
			<y-m>-0.0491</y-m>
			<z-m>-0.0413</z-m>
		</center>
		<axis>
			<x>-1</x>
		</axis>
	</animation>


	<!-- ============ CDI =========== -->

	<!-- HSI-course-card -->
	<animation>
		<type>rotate</type>
		<object-name>HSI-course-card</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<!--bearing-validity-flag-->
	<animation>
		<type>select</type>
		<object-name>bearing-validity-flag</object-name>
		<condition>
			<or>
				<and>
					<equals>
						<property>instrumentation/nav[0]/in-range</property>
						<value>false</value>
					</equals>
					<equals>
						<property>sim/model/A-10/A-10-nav/selector-ils</property>
						<value>true</value>
					</equals>
				</and>
				<and>
					<equals>
						<property>instrumentation/tacan/in-range</property>
						<value>false</value>
					</equals>
					<equals>
						<property>instrumentation/tacan/switch-position</property>
						<value>1</value>
					</equals>
				</and>
				<and>
					<equals>
						<property>sim/model/A-10/A-10-nav/selector-ils</property>
						<value>false</value>
					</equals>
					<equals>
						<property>instrumentation/tacan/switch-position</property>
						<value>0</value>
					</equals>
				</and>
			</or>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bearing-validity-flag</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<!--course-deviation-indicator off (CDI)-->
	<animation>
		<type>select</type>
		<object-name>course-deviation-indicator-off</object-name>
		<condition>
			<or>
				<less-than>
					<property>systems/electrical/outputs/hsi</property>
					<value>24</value>
				</less-than>
				<and>
					<equals>
						<property>sim/model/A-10/A-10-nav/selector-ils</property>
						<value>false</value>
					</equals>
					<equals>
						<property>instrumentation/tacan/switch-position</property>
						<value>0</value>
					</equals>
				</and>
				<and>
					<equals>
						<property>instrumentation/tacan/switch-position</property>
						<value>1</value>
					</equals>
					<equals>
						<property>instrumentation/tacan/in-range</property>
						<value>false</value>
					</equals>
				</and>
			</or>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>course-deviation-indicator-off</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<!--  ILS on CDI  -->
	<!-- ils course-deviation-indicator on-->
	<animation>
		<type>select</type>
		<object-name>course-deviation-indicator-on</object-name>
		<condition>
			<equals>
				<property>sim/model/A-10/A-10-nav/selector-ils</property>
				<value>true</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>course-deviation-indicator-on</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>course-deviation-indicator-on</object-name>
		<property>instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-10</ind>
				<dep>-0.024</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>0.024</dep>
			</entry>
		</interpolation>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	<!-- ils to-from (to)-->
	<animation>
		<type>select</type>
		<object-name>to-from-to</object-name>
		<condition>
			<equals>
				<property>instrumentation/nav[0]/to-flag</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
			<equals>
				<property>sim/model/A-10/A-10-nav/selector-ils</property>
				<value>true</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>to-from-to</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>
	<!-- ils to-from (from)-->
	<animation>
		<type>select</type>
		<object-name>to-from-from</object-name>
		<condition>
			<equals>
				<property>instrumentation/nav[0]/from-flag</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
			<equals>
				<property>sim/model/A-10/A-10-nav/selector-ils</property>
				<value>true</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>to-from-from</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<!--  TACAN on CDI  -->
	<!-- tacan course-deviation-indicator on-->
	<animation>
		<type>select</type>
		<object-name>tcn-course-deviation-indicator-on</object-name>
		<condition>
			<equals>
				<property>instrumentation/tacan/in-range</property>
				<value>true</value>
			</equals>
			<equals>
				<property>instrumentation/tacan/switch-position</property>
				<value>1</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>tcn-course-deviation-indicator-on</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>tcn-course-deviation-indicator-on</object-name>
		<property>sim/model/A-10/instrumentation/cdi/needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-10</ind>
				<dep>-0.024</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>0.024</dep>
			</entry>
		</interpolation>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	<!-- tacan to-from (to)-->
	<animation>
		<type>select</type>
		<object-name>tcn-to-from-to</object-name>
		<condition>
			<equals>
				<property>sim/model/A-10/instrumentation/cdi/to-flag</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
			<equals>
				<property>instrumentation/tacan/switch-position</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>tcn-to-from-to</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>
	<!-- tacan to-from (from)-->
	<animation>
		<type>select</type>
		<object-name>tcn-to-from-from</object-name>
		<condition>
			<equals>
				<property>sim/model/A-10/instrumentation/cdi/from-flag</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</greater-than>
			<equals>
				<property>instrumentation/tacan/switch-position</property>
				<value>1</value>
			</equals>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>tcn-to-from-from</object-name>
		<property>instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
		</axis>
	</animation>


	<!-- lighting -->

	<animation>
		<object-name>panel</object-name>
		<type>material</type>
		<condition>
			<not>
				<property>sim/rendering/rembrandt/enabled</property>
			</not>
		</condition>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.385</red>
			<green>0.168</green>
			<blue>0.07</blue>
		</emission>
	</animation>
	<animation>
		<object-name>instrument</object-name>
		<type>material</type>
		<condition>
			<not>
				<property>sim/rendering/rembrandt/enabled</property>
			</not>
		</condition>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
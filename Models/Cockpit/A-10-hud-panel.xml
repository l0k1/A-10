<?xml version="1.0"?>

<PropertyList> 
	<path>A-10-hud-panel.ac</path>

	<animation>
		<object-name>mode-selector</object-name>
		<type>rotate</type>
		<property>sim/model/A-10/controls/hud/mode-selector</property>
		<factor>45</factor>
		<center>
			<y-m>0.0238</y-m>
			<z-m>0.0180</z-m>
		</center>
		<axis><x>-1</x></axis>

		<animation>
		<type>knob</type>
		<object-name>mode-selector</object-name>
		<property>controls/hud/m-sel</property>
		<factor>45</factor>
		<center>
			<y-m>0.0238</y-m>
			<z-m>0.0180</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/hud/m-sel</property>
				<factor>1</factor>
				<min>0</min>
				<max>3</max>
				<wrap>false</wrap>
			</binding>
		</action>		
	</animation>

<!-- lighting -->

	<effect>
		<inherits-from>Aircraft/A-10/Models/Effects/interior/panel</inherits-from>
		<parameters>
			<implicit-lightmap-threshold-low type="float">0.2</implicit-lightmap-threshold-low>
			<implicit-lightmap-threshold-high type="float">1.2</implicit-lightmap-threshold-high>
			<lightmap-factor n="0"><use>controls/lighting/panel-int</use></lightmap-factor>
		</parameters>
		<object-name>mount</object-name>
	</effect>
	
	<animation>
		<object-name>hud-panel</object-name>
		<type>material</type>
		<condition><not><property>sim/rendering/rembrandt/enabled</property></not></condition>
		<emission> 
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.385</red>
			<green>0.168</green>
			<blue>0.07</blue>
		</emission>
	</animation>

		<animation>
			<type>range</type>
			<min-m>0</min-m>
			<max-m>5</max-m>
		</animation>
	</PropertyList>

<?xml version="1.0"?>

<PropertyList>

	<name>AoA-gauge</name>
	<path>A-10-AoA-gauge.ac</path>

	<animation>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>orientation/alpha-deg</property>
		<interpolation>
			<!--        AoA deg           gauge deg -->
			<entry>
				<ind>  -2.5</ind>
				<dep>  270</dep>
			</entry>
			<entry>
				<ind>  -2</ind>
				<dep>  245</dep>
			</entry>
			<entry>
				<ind>  0</ind>
				<dep>   182,5</dep>
			</entry>
			<entry>
				<ind> 1</ind>
				<dep>   162,5</dep>
			</entry>
			<entry>
				<ind> 5</ind>
				<dep>   107,5</dep>
			</entry>
			<entry>
				<ind> 11</ind>
				<dep>   57,5</dep>
			</entry>
			<entry>
				<ind> 13</ind>
				<dep>   49</dep>
			</entry>
			<entry>
				<ind> 16</ind>
				<dep>   41,5</dep>
			</entry>
			<entry>
				<ind> 30</ind>
				<dep>   27,5</dep>
			</entry>

		</interpolation>
		<axis>
			<x>-1</x>
		</axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/hsi</property>
				<value>24</value>
			</less-than>
		</condition>
	</animation>

	<!-- lighting -->

	<animation>
		<object-name>mount</object-name>
		<type>material</type>
		<condition>
			<not>
				<property>sim/rendering/rembrandt/enabled</property>
			</not>
		</condition>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.385</red>
			<green>0.168</green>
			<blue>0.07</blue>
		</emission>
	</animation>

	<animation>
		<object-name>instrument</object-name>
		<type>material</type>
		<condition>
			<not>
				<property>sim/rendering/rembrandt/enabled</property>
			</not>
		</condition>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.55</red>
			<green>0.24</green>
			<blue>0.10</blue>
		</emission>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
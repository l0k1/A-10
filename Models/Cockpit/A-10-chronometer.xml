<?xml version="1.0"?>

<PropertyList>

	<name>chronometer</name>
	<path>chronometer.ac</path>

	<animation>
		<type>select</type>
		<object-name>mask</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/ldg-warning-system</property>
				<value>24</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>h10</object-name>
		<property>sim/time/utc/hour</property>
		<factor>0.01</factor>
		<offset>0</offset>
		<step>10</step>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>h1</object-name>
		<property>sim/time/utc/hour</property>
		<factor>0.1</factor>
		<offset>0</offset>
		<step>1</step>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>


	<animation>
		<type>textranslate</type>
		<object-name>m10</object-name>
		<property>sim/time/utc/minute</property>
		<factor>0.01</factor>
		<offset>0</offset>
		<step>10</step>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>m1</object-name>
		<property>sim/time/utc/minute</property>
		<factor>0.1</factor>
		<offset>0</offset>
		<step>1</step>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>s10</object-name>
		<property>sim/time/utc/second</property>
		<factor>0.01</factor>
		<offset>0</offset>
		<step>10</step>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>s1</object-name>
		<property>sim/time/utc/second</property>
		<factor>0.1</factor>
		<offset>0</offset>
		<step>1</step>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>


	<!-- lighting -->

	<animation>
		<object-name>mount</object-name>
		<object-name>buttons</object-name>
		<type>material</type>
		<condition>
			<not>
				<property>sim/rendering/rembrandt/enabled</property>
			</not>
		</condition>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.385</red>
			<green>0.168</green>
			<blue>0.07</blue>
		</emission>
	</animation>

	<animation>
		<object-name>background</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.60</green>
			<blue>0.40</blue>
		</emission>
	</animation>

	<animation>
		<object-name>leds</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
			<red>0.50</red>
			<green>0.60</green>
			<blue>0.40</blue>
		</emission>
	</animation>


	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
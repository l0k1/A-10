<?xml version="1.0"?>
<!--<!DOCTYPE PropertyList SYSTEM "panel.dtd"> No panel.dtd file present-->

<PropertyList>

  <name>A-10 r1 Panel Hotspots</name>
  <background>Aircraft/A-10/Models/Cockpit/transparent-bg.rgb</background>
  <w>1024</w>
  <h>768</h>
  <y-offset>0</y-offset>

  <instruments>
    <instrument>
      <name>r1 panel</name>
      <y>384</y>
      <w>1024</w>
      <h>768</h>
      <w-base>1024</w-base>
      <h-base>1024</h-base>
      <x>512</x>

      <layers>

        <layer>
          <name>background</name>
          <texture>
            <path>Aircraft/A-10/Models/Cockpit/transparent-bg.rgb</path>
            <x1>0.0</x1>
            <y1>0.0</y1>
            <x2>1.0</x2>
            <y2>1.0</y2>
          </texture>
        </layer>

        <!--<layer>
    <name>grid</name>
    <texture>
     <path>Aircraft/A-10/Models/Cockpit/hotspotgrid.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
   </layer>-->

      </layers>

      <!-- define hotspot actions below -->


      <actions>

        <!-- ils units-->
        <action>
          <name>ils-units-down</name>
          <button>0</button>
          <x>-400</x>
          <y>-450</y>
          <w>150</w>
          <h>65</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
            <step>-1</step>
          </binding>
          <binding>
            <command>nasal</command>
            <script>nav_scripts.nav0_freq_update();</script>
          </binding>
        </action>

        <action>
          <name>ils-units-up</name>
          <button>0</button>
          <x>-240</x>
          <y>-450</y>
          <w>150</w>
          <h>65</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
            <step>1</step>
          </binding>
          <binding>
            <command>nasal</command>
            <script>nav_scripts.nav0_freq_update();</script>
          </binding>
        </action>


        <!-- ils deci-->
        <action>
          <name>ils-deci-down</name>
          <button>0</button>
          <x>165</x>
          <y>-450</y>
          <w>150</w>
          <h>65</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
            <step>-0.01</step>
          </binding>
          <binding>
            <command>nasal</command>
            <script>nav_scripts.nav0_freq_update();</script>
          </binding>
        </action>

        <action>
          <name>ils-deci-up</name>
          <button>0</button>
          <x>330</x>
          <y>-450</y>
          <w>150</w>
          <h>65</h>
          <binding>
            <command>property-adjust</command>
            <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
            <step>0.01</step>
          </binding>
          <binding>
            <command>nasal</command>
            <script>nav_scripts.nav0_freq_update();</script>
          </binding>
        </action>


      </actions>

    </instrument>
  </instruments>

</PropertyList>
<?xml version="1.0"?>

<PropertyList>

	<name>pilot</name>
	<path>pilot.ac</path>

	<!-- De-select when in view 0 -->
	<animation>
		<type>select</type>
		<object-name>Pilot</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>
	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>ejection-handles</object-name>
		<action>
			<button>0</button>
		    	<binding>
				<command>nasal</command>
				<script>A10.eject()</script>
		    	</binding>
		</action>
	</animation>

</PropertyList>
